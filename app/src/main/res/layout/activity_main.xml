<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_random"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

           <TextView
               android:id="@+id/saldo"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
               android:text="Saldo Bitcoin Aktif Anda"
               android:textColor="#1417e2"
               android:textSize="20sp"
               android:textStyle="bold"
               android:typeface="serif"/>


           <TextView
               android:id="@+id/nilai_coin"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_horizontal"
               android:text="0,001 BTC"
               android:textColor="@color/colorPrimaryDark"
               android:textSize="20sp"
               android:textStyle="bold"
               android:typeface="serif"/>




            <TextView
                android:id="@+id/senilai_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="5dp"
                android:text="Senilai Rp 93.650"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="serif"/>

            <TextView
                android:id="@+id/satu_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="5dp"
                android:text="1 BTC = Rp 93.649.350"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_bitcoin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterEnabled="true"
                app:errorEnabled="true" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Jumlah Bitcoin"
                    android:digits="1234567890.-"
                    android:inputType="number"
                    android:id="@+id/nom_bitcoin"/>

                <TextView
                    android:id="@+id/warn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Coin anda tidak cukup"
                    android:textColor="#be1212"
                    android:visibility="gone"/>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_rp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            app:errorEnabled="true" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Jumlah Rupiah"
                    android:inputType="number"
                    android:id="@+id/nom_rp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:gravity="right" >

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tempel" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pindah" />
        </LinearLayout>

        <EditText
            android:id="@+id/alasan_keluar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimaryDark"
            android:hint="Alamat Tujuan Pengiriman"
            android:padding="20dp"
            android:inputType="text" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_lanjut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="lanjut"
                android:textColor="#000" />

        </ScrollView>

    </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>




